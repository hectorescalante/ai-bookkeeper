# AI Bookkeeper - Development Environment Configuration
# Copy this file to .env and update values as needed

# Application
APP_ENV=development
DEBUG=true

# API Server
API_HOST=127.0.0.1
API_PORT=8000

# Database (relative path for development)
DATABASE_URL=sqlite:///data/ai_bookkeeper.db

# Anthropic API Key (optional - can be configured via UI)
# ANTHROPIC_API_KEY=sk-ant-...

# Azure AD for Outlook Integration
# Register app at: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
# AZURE_CLIENT_ID=your-client-id-here
AZURE_TENANT_ID=common
AZURE_REDIRECT_URI=http://localhost:8000/api/settings/outlook/callback

# File Storage
# STORAGE_PATH=/Users/yourname/Library/Application Support/AIBookkeeper
ICLOUD_ENABLED=true

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=text
